<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.Seller_Registration">
    <ImageView
        android:id="@+id/imgview"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/seller"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/srname"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_shape"
        android:hint="  Enter Your Name"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/sremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_shape"
        android:layout_marginTop="20dp"
        android:hint="  Enter Email"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/srpass"
        android:drawableLeft="@drawable/ic_visibility_black_24dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="  Enter Password"
        android:background="@drawable/edit_shape"
        android:padding="15dp"
        android:textSize="17dp"/>
    <EditText
        android:id="@+id/srcpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Enter Confirm Password"
        android:drawableLeft="@drawable/ic_visibility_black_24dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        android:inputType="number"
        android:background="@drawable/edit_shape"
        android:textSize="15dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/srsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:padding="15dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/button_shape"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>



</LinearLayout>